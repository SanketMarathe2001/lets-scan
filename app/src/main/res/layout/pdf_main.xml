<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        app:theme="@style/ToolbarColored">

    </androidx.appcompat.widget.Toolbar>
    <GridView
        android:layout_margin="10dp"
        android:layout_below="@id/test"
        android:id="@+id/idGVcourses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="6dp"
        android:numColumns="2"
        android:verticalSpacing="6dp" />
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/stop" android:background="@drawable/round_edittext3" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="50dp" android:layout_marginEnd="50dp" android:layout_centerInParent="true">
        <TextView android:textSize="15sp" android:gravity="center" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Please Wait!!"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/load_bar_ca" android:padding="4dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>