        <Button android:textSize="12sp" android:textColor="@android:color/primary_text_dark" android:id="@+id/rotate_btn" android:background="@color/primaryColor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/rotate" android:drawableTop="@drawable/ic_baseline_rotate_right" android:layout_weight="1" android:textAllCaps="false"/>
