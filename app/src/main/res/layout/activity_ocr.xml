<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OcrActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ocr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/primaryColor"
        app:theme="@style/ToolbarColored">
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ocr_image"
        android:layout_centerInParent="true"
        android:layout_width="400dp"
        android:layout_height="400dp"/>


    <LinearLayout
        android:id="@+id/option"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">


        <Button
            android:id="@+id/gallery_button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:background="@color/primaryColor"
            android:drawableTop="@drawable/ic_gallery_file_act"
            android:text="Gallery"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/ocr_1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:drawableTop="@drawable/ocr"
            android:text="OCR"
            android:layout_marginEnd="10dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/camera_button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:drawableTop="@drawable/ic_camera_file_act"
            android:text="Camera"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>